<html>
<head>
<style>
  .card {
    margin-top: 30px;
  }
</style>
</head>
<body>
  <div>
    <h1 class="glow">Upload your flat</h1>
  </div>
  <div class="card text-center w-75 mx-auto mp-auto margin-auto mb-5">
    <div class="">
      <div class="card-header">
          <%= simple_form_for (@flat) do |f| %>
            <%= f.input :title %>
            <%= f.input :address %>
            <%= f.input :price %>
            <%= f.input :description %>
            <%= f.input :pet_type, collection: ['small', 'medium', 'large'] %>
            <%= f.input :photos, as: :file, input_html: { multiple: true } %>
            <%= f.submit class: 'btn btn-primary' %>
          <% end %>
      </div>
    </div>
  </div>
</body>
</html>
