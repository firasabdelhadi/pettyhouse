<%# <%= link_to "Book Now!", new_booking_path %>
<div class="flat-banner">
  <h1><%= @flat.title %></h1>
  <h2><%= @flat.address %></h2>
</div>
<div class="container">
  <div class="row text-center">
    <div class="container-fluid">
      <div class="my-3">
        <% @flat.photos.each do |photo| %>
          <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
        <% end %>
      </div>
    </div>
      <div class="d-flex justify-content-around">
        <div class="card w-50">
          <div class="card-header">
            Details
          </div>
          <div class="card-body">
            <blockquote class="blockquote mb-0">
              <p><%= @flat.description %></p>
              <footer class="blockquote-footer">Pet Size: <cite title="Source Title"><p> <%= @flat.pet_max_size %> </p></cite></footer>
              <footer class="blockquote-footer">Price: <cite title="Source Title"><p> <%= @flat.price.truncate %> $ </p></cite></footer>
            </blockquote>
          </div>
        </div>

        <div class="card w-25">
          <div class="card-header">
            Select your date
          </div>
          <div class="card-body">
              <%= form_with model: Booking.new, authenticity_token: true do |f| %>
            <%= f.date_field :start_date,
              data: {
                controller: "flatpickr",
                mode: "range",
                flatpickr_date_format: "d-m-Y",
                flatpickr_min_date: Time.zone.now,
                # inline: true,
                enableTime: true,
                minTime: "09:00",
                maxTime: "22:00"
                # position: "auto"
              },
              style: "width:230px; text-align:center"
            %>
            <%= yield %>
            <p></p>
              <%= link_to "Reserve ", bookings_path(@edit_booking), class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
  </div>
</div>
